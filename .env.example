# LLM Language Learning Platform - Environment Configuration
# Copy this file to .env and modify as needed

# ===================
# Service Ports
# ===================
FRONTEND_PORT=80
BACKEND_PORT=8080
MYSQL_PORT=3306
REDIS_PORT=6379
OLLAMA_PORT=11434

# ===================
# MySQL Configuration
# ===================
MYSQL_ROOT_PASSWORD=root_password
MYSQL_DATABASE=llm_learning
MYSQL_USERNAME=llm_user
MYSQL_PASSWORD=llm_password

# ===================
# Redis Configuration
# ===================
REDIS_PASSWORD=

# ===================
# JWT Configuration
# ===================
JWT_SECRET=llm-language-learning-platform-secret-key-2024

# ===================
# AI Provider Configuration
# ===================
# Default provider: ollama or openai
AI_DEFAULT_PROVIDER=ollama

# OpenAI Configuration
OPENAI_ENABLED=false
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-3.5-turbo

# Ollama Configuration
OLLAMA_ENABLED=true
OLLAMA_MODEL=llama2
